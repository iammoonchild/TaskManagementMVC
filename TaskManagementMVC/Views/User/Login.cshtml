@model TaskManagementMVC.Entities.ViewModels.UserViewModels.LoginViewModel;
@{
    Layout = null;
};
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" integrity="...">
    <link rel="stylesheet" href="/css/style.css">
    <title>Patient_Login</title>
</head>

<body>

    <div class="bg-image " style="background-image: url(/assets/images/PlatformLogin.jpg); background-size: cover; background-repeat: no-repeat;
  background-position: center; background-blend-mode: lighten; background-color: rgba(255, 255, 255, 0.9);">
        <section class="vh-100">

            <div class="container bg-transparent pt-5">

                <div class="row d-flex justify-content-center bg-transparent align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5 bg-transparent">

                        <div class="card border-0 bg-transparent " style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">
                                <button type="submit" class="ms-auto d-block rounded border-info bg-white p-1">
                                    <img src="/assets/images/moon.svg" style="transform: rotate(90deg);" alt="" class="p-1">
                                </button>
                                <div class="mb-md-2 pb-5">
                                    <img src="assets/images/logo.png" class="" alt="">

                                </div>
                                <div class="d-flex ">
                                    <a asp-controller="home" asp-action="index_request" class="text-decoration-none text-info mb-3 fs-5"
                                       style="color: #17a2b8;">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                             fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd"
                                                  d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0" />
                                        </svg> Back
                                    </a>
                                </div>
                                <form method="post">
                                    <h2 class="fw-bold mb-3">Login to your account </h2>
                                    <div class="form-floating mb-3">

                                        <input type="text" class="form-control uname" placeholder="name@example.com" asp-for="Email">
                                        <img src="/assets/images/person-circle.svg" alt="" class="uicon">
                                        <label for="floatingInput">Username</label>
                                        <p class="text-start ps-2 text-danger fw-bold">@Html.ValidationMessageFor(x => x.Email)</p>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control uname" placeholder="Password" asp-for="Password">
                                        <img src="/assets/images/eye.svg" alt="" class="uicon">
                                        <label for="floatingPassword">Password</label>
                                        <p class="text-start ps-2 text-danger fw-bold">@Html.ValidationMessageFor(x => x.Password)</p>
                                    </div>
                                    <div>
                                        <button class="btn btn-info w-100 btn-lg my-4 text-white" type="submit">Log In</button>
                                        <a asp-controller="Home" asp-action="Forgot_pwd" class="text-decoration-none text-info mb-5"> Forgot Password?</a>
                                        <!--
                                        <div class="text-secondary mt-5 footer">
                                          <span class="mr-2">Terms and Conditions</span>
                                          <span class="border-left mx-2"></span>
                                          <span>Privacy Policy</span>
                                        </div> -->
                                    </div>

                                </form>

                            </div>

                            <div class="text-secondary d-flex justify-content-center mt-5 footer">
                                <span class="me-3 border-end border-secondary pe-3">Terms and Conditions</span>
                                <span>Privacy Policy</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>

</html>