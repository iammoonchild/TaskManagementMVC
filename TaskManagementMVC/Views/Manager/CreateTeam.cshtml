@model TaskManagementMVC.Entities.ViewModels.UserViewModels.TeamMembersViewModel;
@{
    Layout = null;
    ViewData["Title"] = "Home Page";
    ViewBag.Title = "Create Team";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Team Members</title>
</head>

<body>
    @if (TempData["LoginSuccess"] != null)
    {
        Html.RenderPartial("_ToastSuccess", TempData["LoginSuccess"]);
    }
    <partial name="_HeaderPartial"/>
    <div class="container-fluid" style="height:100vh">
        @if (Model.GetTeamMembersData.Count != 0)
        {
            <div class="d-flex justify-content-center align-items-center">
                @foreach (var items in Model.GetTeamMembersData)
                {
                    <div class="mx-1" style="width:150px">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="/images/memberavatar.png"
                                 style="height:100px; width:100px" class="mx-auto" />
                        </div>
                        <div class="d-flex justify-content-center align-items-center">
                            <span class="fs-5 text-wrap mx-4">@items.Name</span>
                        </div>
                    </div>
                }

            </div>
            <div class="d-flex text-center flex-column mt-5 mx-auto">
                <div class="h3 m-auto">
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="bi bi-plus-circle-fill"></i>
                        Create Team
                    </button>

                </div>

            </div>

        }
        else
        {
            <div class="d-flex text-center flex-column h-100 m-auto">
                <div class="h3 m-auto">
                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="bi bi-plus-circle-fill"></i>
                        Create Team
                    </button>

                </div>

            </div>
        }
    </div>
    <!-- Button trigger modal -->
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Team</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="teamMembersForm" class="" method="post">
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" name="TeamName" placeholder="" required>
                            <label for="TeamName">Team Name</label>
                        </div>
                        <div id="teamMembersContainer">
                            <div class="team-member-wrapper">
                                <div class="d-flex mb-2 ps-1 justify-content-between align-items-center teamMember-name-delete">
                                    <h5>Team Member</h5>
                                    <button type="button" class="btn btn-danger delete-member">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                <div class="mb-3 form-floating">
                                    <input type="text" class="form-control" name="FirstName[]" placeholder="" required>
                                    <label for="FirstName[]">First Name</label>

                                </div>
                                <div class="mb-3 form-floating">
                                    <input type="text" class="form-control" name="LastName[]" placeholder="" required>
                                    <label for="LastName[]">Last Name</label>

                                </div>
                                <div class="mb-3 form-floating">
                                    <input type="email" class="form-control" name="Email[]" placeholder="" required>
                                    <label for="Email[]">Email ID</label>

                                </div>
                                <div class="mb-3 form-floating">
                                    <select class="form-select" name="Role[]" required>
                                        <option value="">Select Role</option>
                                        <option value="1">Team Lead</option>
                                        <option value="2">Member</option>
                                        <!-- Add more roles as needed -->
                                    </select>
                                    <label for="Role[]">Role</label>

                                </div>
                            </div>
                        </div>
                        <div class="text-end">
                            <button type="button" class="btn btn-primary" id="addMore">Add More</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="saveTeamMembers">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="~/js/CreateTeamScript.js"></script>
</body>

</html>